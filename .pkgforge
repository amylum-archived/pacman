    checksum: '31d0e4ccf6e59cc2e793ebac5ad62afaf24248fcea7ef8becda336fcc95723f2'
  }
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-scriptlet-shell': '/usr/bin/bash',
  'disable-doc': nil,
  'with-gpgme': nil
)

cflags
harden

build do
  run './autogen.sh'
  configure 'LIBSSL_LIBS' => '-lz -lcrypto -lssl'
  make
  install
end

