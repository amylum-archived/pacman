    checksum: '2e824c49d94941fe4dd45da18482e46e6fc47ea9db52ce098a023d5fa7dec600'
  }
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-scriptlet-shell': '/usr/bin/bash',
  'disable-doc': nil,
  'with-gpgme': nil
)

cflags
harden

build do
  run './autogen.sh'
  configure 'LIBSSL_LIBS' => '-lz -lcrypto -lssl'
  make
  install
end

