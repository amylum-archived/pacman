  },
  curl: {
    version: '7.56.0-1',
    checksum: 'a384bd4dbcf4cb2e60b448a623e30cd36d77d64e45313d401c32ff643853285e'
  },
  openssl: {
    version: '1.0.2l-1',
    checksum: '6a46a1a65aa5cadc69a2b01e3ef8fa0a38353f3f7b86c1a772ab5156dd5b2264'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  gpgme: {
    version: '1.9.0-1',
    checksum: '8ff565d5f352d2cbb6505ab20154061c3823fd7425efbe507abb0abc17e28c32'
  },
  'libgpg-error': {
    version: '1.27-1',
    checksum: '7ae57f06296bf6ef98fc450f7ef7d1a47753d429c1cdc440045a03ed108d58de'
  },
  libassuan: {
