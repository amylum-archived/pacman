  },
  curl: {
    version: '7.63.0-2',
    checksum: 'cbf3375cbade58a1f057361b7c9dc8ccccb9eda062bffb8c525fee5e4ecaf061'
  },
  openssl: {
    version: '1.1.1a-1',
    checksum: '70b9b57ef55293a4df4cc18776dc56d77d78856960bcc6571f8a009f00faf266'
  },
  zlib: {
    version: '1.2.11-6',
    checksum: '7da7212123edac6d5d5dc2db8fb10a6af06472578840c51e489e1f391b66c208'
  },
  gpgme: {
    version: '1.12.0-5',
    checksum: 'c5e69a769ed47c6a371e49dbb5fdeefe2f35d029717d5c1eae439111f20e7580'
  },
  'libgpg-error': {
    version: '1.35-1',
    checksum: '1930a9879a364751e2486ee796d8c081b3a5307aa1e70f5b84e15b612b9d120b'
  },
  libassuan: {
