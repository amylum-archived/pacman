    checksum: '8c9f1f337a456d77c67f62d163c71421966b425ac9574030e4ac7dfb65db8a1e'
  },
  openssl: {
    version: '1.1.0i-2',
    checksum: 'bdfcd530e741ab1e20e3996463847a851e7ecdb509b7cb227218fb6e96eb0cac'
  },
  zlib: {
    version: '1.2.11-6',
    checksum: '7da7212123edac6d5d5dc2db8fb10a6af06472578840c51e489e1f391b66c208'
  },
  gpgme: {
    version: '1.11.1-3',
    checksum: '8ad569be015944b8b7b465155b2ae0adff56325925b5eb3c2d278d06c7ffb1d5'
  },
  'libgpg-error': {
    version: '1.31-1',
    checksum: '8f405a9f6936a5e17e992bd69211a0e22cfa52a18abcc8eb217ea86a1871085a'
  },
  libassuan: {
