    checksum: '01e48328f1d2442d8a06ed1890b3a642f73f6f56345ec59be9a989adea801cd8'
  }
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-scriptlet-shell': '/usr/bin/bash',
  'disable-doc': nil,
  'with-gpgme': nil
)

cflags
harden

build do
  run './autogen.sh'
  configure 'LIBSSL_LIBS' => '-lz -lcrypto -lssl'
  make
  install
end

