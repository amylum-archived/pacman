    checksum: '795a3cb4770534c38919bfd00bc86f1dbef74b62411464e96ae3572da357deac'
  },
  openssl: {
    version: '1.0.2m-1',
    checksum: '263c64d3c4cde7f0f695a08453738842ceb6f2273882123e10ba4bbad619f9e0'
  },
  zlib: {
    version: '1.2.11-1',
