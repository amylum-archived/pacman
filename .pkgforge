name 'pacman'
org 'amylum'

licenses 'COPYING'

deps(
  libarchive: '3.3.1-1',
  curl: '7.54.0-1',
  openssl: '1.0.2k-1',
  zlib: '1.2.11-1',
  gpgme: '1.9.0-1',
  'libgpg-error': '1.27-1',
  libassuan: '2.4.3-12'
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-scriptlet-shell': '/usr/bin/bash',
  'disable-doc': nil,
  'with-gpgme': nil
)

cflags
harden

build do
  run './autogen.sh'
  configure 'LIBSSL_LIBS' => '-lz'
  make
  install
end

test do
  # TODO: add tests
end
