    checksum: '2d30ae2269c7c6eb05c8387e423714b123727ecea973521754fa4d430dcd8028'
  },
  curl: {
    version: '7.60.0-2',
    checksum: '40553628e91e1babc540450e3391754fabf881e7489e327e1837de6780d39c2d'
  },
  openssl: {
    version: '1.1.0h-3',
    checksum: 'c9d6db39ea09dd8051cb36c42f85eb8043ce580c6132caa0506a839d88dea275'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  gpgme: {
    version: '1.11.1-2',
    checksum: 'd50e1d04c569f9adcac0d16becd581d1e75bc21fa3905ca3b6e733f7439e532b'
  },
  'libgpg-error': {
    version: '1.31-1',
    checksum: '8f405a9f6936a5e17e992bd69211a0e22cfa52a18abcc8eb217ea86a1871085a'
  },
  libassuan: {
