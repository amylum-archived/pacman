    version: '3.3.3-1',
    checksum: '9c65f16c38b0ec97142eac034cdb57348f9ec8710a757361ef19e80e9d9748d0'
  },
  curl: {
    version: '7.63.0-2',
    checksum: 'cbf3375cbade58a1f057361b7c9dc8ccccb9eda062bffb8c525fee5e4ecaf061'
  },
  openssl: {
    version: '1.1.1a-1',
    checksum: '70b9b57ef55293a4df4cc18776dc56d77d78856960bcc6571f8a009f00faf266'
  },
  zlib: {
    version: '1.2.11-6',
    checksum: '7da7212123edac6d5d5dc2db8fb10a6af06472578840c51e489e1f391b66c208'
  },
  gpgme: {
    version: '1.12.0-3',
    checksum: '79d1acb0643c949c5c152d3e3a587552bdb7dc003fe6b80b663b7d0ba6dfd7da'
  },
  'libgpg-error': {
    version: '1.35-1',
    checksum: '1930a9879a364751e2486ee796d8c081b3a5307aa1e70f5b84e15b612b9d120b'
  },
  libassuan: {
    version: '2.5.2-2',
    checksum: '3f6361f4404e110eb416a5274e00c2c97107370e348e0c1490bb9e56cfe19d9d'
  }
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-scriptlet-shell': '/usr/bin/bash',
  'disable-doc': nil,
  'with-gpgme': nil
)

cflags
harden

build do
  run './autogen.sh'
  configure 'LIBSSL_LIBS' => '-lz -lcrypto -lssl'
  make
  install
end

