    checksum: '81b0eeffe6c3422606a72c479392474a9b815558418133c04376c01c1ee6046b'
  }
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-scriptlet-shell': '/usr/bin/bash',
  'disable-doc': nil,
  'with-gpgme': nil
)

cflags
harden

build do
  run './autogen.sh'
  configure 'LIBSSL_LIBS' => '-lz -lcrypto -lssl'
  make
  install
end

