name 'pacman'
org 'amylum'

licenses 'COPYING'

deps(
  libarchive: '3.2.1-4',
  curl: '7.50.3-17',
  openssl: '1.0.2h-7',
  zlib: '1.2.8-4',
  gpgme: '1.7.0-8',
  'libgpg-error': '1.24-7',
  libassuan: '2.4.3-8'
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-scriptlet-shell': '/usr/bin/bash',
  'disable-doc': nil,
  'with-gpgme': nil
)

cflags
harden

build do
  run './autogen.sh'
  configure 'LIBSSL_LIBS' => '-lz'
  make
  install
end

test do
  # TODO: add tests
end
